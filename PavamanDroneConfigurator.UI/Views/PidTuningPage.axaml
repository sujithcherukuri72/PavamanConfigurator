<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PavamanDroneConfigurator.UI.ViewModels"
             x:Class="PavamanDroneConfigurator.UI.Views.PidTuningPage"
             x:DataType="vm:PidTuningPageViewModel">

    <UserControl.Styles>
        <!-- Modern Color System -->
        <Style Selector="TextBlock.PageTitle">
            <Setter Property="FontSize" Value="32"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#3B82F6"/>
        </Style>
        
        <Style Selector="TextBlock.PageSubtitle">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="Margin" Value="0,6,0,0"/>
        </Style>
        
        <!-- Modern Card Style with Shadow -->
        <Style Selector="Border.TuningCard">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="0,0,0,24"/>
            <Setter Property="BoxShadow" Value="0 2 8 0 #10000000, 0 1 3 0 #10000000"/>
        </Style>
        
        <Style Selector="Border.TuningCard:pointerover">
            <Setter Property="BoxShadow" Value="0 4 12 0 #15000000, 0 2 6 0 #10000000"/>
        </Style>
        
        <Style Selector="TextBlock.CardLabel">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
        
        <Style Selector="TextBlock.CardDescription">
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
        
        <Style Selector="TextBlock.RangeLabel">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#9CA3AF"/>
        </Style>
        
        <!-- Enhanced Slider Style -->
        <Style Selector="Slider">
            <Setter Property="Height" Value="48"/>
            <Setter Property="MinWidth" Value="300"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style Selector="Slider /template/ Track#PART_Track">
            <Setter Property="Height" Value="6"/>
        </Style>
        
        <Style Selector="Slider /template/ Thumb">
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <Style Selector="Slider /template/ Thumb:pointerover">
            <Setter Property="Background" Value="#2563EB"/>
        </Style>
        
        <!-- Enhanced NumericUpDown Style -->
        <Style Selector="NumericUpDown">
            <Setter Property="MinWidth" Value="140"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
        </Style>
        
        <!-- Center align the TextBox inside NumericUpDown -->
        <Style Selector="NumericUpDown /template/ TextBox#PART_TextBox">
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        
        <Style Selector="NumericUpDown:focus">
            <Setter Property="BorderBrush" Value="#3B82F6"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        
        <!-- Larger Spinner Buttons -->
        <Style Selector="NumericUpDown /template/ RepeatButton">
            <Setter Property="Width" Value="36"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        
        <!-- Primary Button -->
        <Style Selector="Button.Primary">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style Selector="Button.Primary:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#2563EB"/>
        </Style>
        
        <!-- Secondary Button -->
        <Style Selector="Button.Secondary">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style Selector="Button.Secondary:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#F9FAFB"/>
        </Style>
        
        <!-- Tab Button Styles -->
        <Style Selector="Button.TabButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="28,14"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="MinWidth" Value="160"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style Selector="Button.TabButton:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#F3F4F6"/>
        </Style>
        
        <Style Selector="Button.TabButtonActive">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="28,14"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="MinWidth" Value="160"/>
        </Style>
        
        <!-- Axis Toggle Styles -->
        <Style Selector="RadioButton.AxisToggle">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="MinWidth" Value="100"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
        
        <Style Selector="RadioButton.AxisToggle:checked">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderBrush" Value="#3B82F6"/>
        </Style>
        
        <!-- Summary Card -->
        <Style Selector="Border.SummaryCard">
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="MinWidth" Value="320"/>
            <Setter Property="BoxShadow" Value="0 2 8 0 #10000000"/>
        </Style>
    </UserControl.Styles>

    <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="32,24" MaxWidth="1600">
            
            <!-- HEADER SECTION -->
            <Grid ColumnDefinitions="*,Auto,Auto" Margin="0,0,0,24">
                <StackPanel Grid.Column="0">
                    <TextBlock Classes="PageTitle" Text="PID TUNING"/>
                    <TextBlock Classes="PageSubtitle" Text="Configure flight controller PID gains"/>
                </StackPanel>
                
                <Button Grid.Column="1" Classes="Secondary" Command="{Binding RefreshCommand}" Margin="0,0,16,0">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="??" FontSize="18"/>
                        <TextBlock Text="Refresh"/>
                    </StackPanel>
                </Button>
                
                <Button Grid.Column="2" Classes="Primary" Command="{Binding UpdateCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <TextBlock Text="??" FontSize="18"/>
                        <TextBlock Text="Update"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- STATUS BAR -->
            <Border Background="#EFF6FF" 
                    BorderBrush="#BFDBFE" 
                    BorderThickness="1"
                    CornerRadius="12" 
                    Padding="16" 
                    Margin="0,0,0,24" 
                    IsVisible="{Binding IsBusy}">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <ProgressBar Width="24" Height="24" IsIndeterminate="True" Foreground="#3B82F6"/>
                    <TextBlock Text="{Binding StatusMessage}" 
                               VerticalAlignment="Center" 
                               Foreground="#1E40AF"
                               FontSize="14"
                               FontWeight="Medium"/>
                </StackPanel>
            </Border>

            <!-- TAB SELECTOR -->
            <Border Background="#F9FAFB" 
                    CornerRadius="16" 
                    Padding="8" 
                    Margin="0,0,0,32" 
                    HorizontalAlignment="Center"
                    BoxShadow="inset 0 2 4 0 #10000000">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <Button Classes.TabButtonActive="{Binding IsBasicTuningSelected}"
                            Classes.TabButton="{Binding !IsBasicTuningSelected}"
                            Command="{Binding SelectBasicTuningCommand}"
                            Content="BASIC TUNING"/>
                    <Button Classes.TabButtonActive="{Binding IsAdvancedTuningSelected}"
                            Classes.TabButton="{Binding !IsAdvancedTuningSelected}"
                            Command="{Binding SelectAdvancedTuningCommand}"
                            Content="ADVANCED TUNING"/>
                    <Button Classes.TabButtonActive="{Binding IsAutoTuningSelected}"
                            Classes.TabButton="{Binding !IsAutoTuningSelected}"
                            Command="{Binding SelectAutoTuningCommand}"
                            Content="AUTO TUNING"/>
                </StackPanel>
            </Border>

            <!-- MAIN CONTENT AREA -->
            <Grid ColumnDefinitions="*,32,Auto">
                
                <!-- LEFT: TUNING CONTROLS -->
                <StackPanel Grid.Column="0">
                    
                    <!-- BASIC TUNING TAB -->
                    <StackPanel IsVisible="{Binding IsBasicTuningSelected}">
                        
                        <!-- RC Feel Roll/Pitch -->
                        <Border Classes="TuningCard">
                            <StackPanel>
                                <TextBlock Classes="CardLabel" Text="RC Feel Roll/Pitch"/>
                                <TextBlock Classes="CardDescription" Text="Slide left: Softer response, Slide right: Crisper response"/>
                                
                                <Grid ColumnDefinitions="80,*,140" ColumnSpacing="16">
                                    <TextBlock Grid.Column="0" 
                                               Classes="RangeLabel" 
                                               Text="0.00"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"/>
                                    <Slider Grid.Column="1" 
                                            Minimum="0" 
                                            Maximum="1" 
                                            Value="{Binding RcFeelRollPitch}"
                                            TickFrequency="0.01"
                                            VerticalAlignment="Center"/>
                                    <NumericUpDown Grid.Column="2" 
                                                   Value="{Binding RcFeelRollPitch}"
                                                   Minimum="0" 
                                                   Maximum="1"
                                                   Increment="0.01"
                                                   FormatString="F2"/>
                                </Grid>
                                
                                <TextBlock Classes="RangeLabel" 
                                           Text="1.0" 
                                           HorizontalAlignment="Right"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Roll/Pitch Sensitivity -->
                        <Border Classes="TuningCard">
                            <StackPanel>
                                <TextBlock Classes="CardLabel" Text="Roll/Pitch Sensitivity"/>
                                <TextBlock Classes="CardDescription" Text="Slide left: Copter is twitchy, Slide right: Copter is sluggish"/>
                                
                                <Grid ColumnDefinitions="80,*,140" ColumnSpacing="16">
                                    <TextBlock Grid.Column="0" 
                                               Classes="RangeLabel" 
                                               Text="0.01"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"/>
                                    <Slider Grid.Column="1" 
                                            Minimum="0.01" 
                                            Maximum="0.5" 
                                            Value="{Binding RollPitchSensitivity}"
                                            TickFrequency="0.01"
                                            VerticalAlignment="Center"/>
                                    <NumericUpDown Grid.Column="2" 
                                                   Value="{Binding RollPitchSensitivity}"
                                                   Minimum="0.01" 
                                                   Maximum="0.5"
                                                   Increment="0.001"
                                                   FormatString="F3"/>
                                </Grid>
                                
                                <TextBlock Classes="RangeLabel" 
                                           Text="0.5" 
                                           HorizontalAlignment="Right"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Climb Sensitivity -->
                        <Border Classes="TuningCard">
                            <StackPanel>
                                <TextBlock Classes="CardLabel" Text="Climb Sensitivity"/>
                                <TextBlock Classes="CardDescription" Text="Slide left: Climb more gently, Slide right: Climb more aggressively"/>
                                
                                <Grid ColumnDefinitions="80,*,140" ColumnSpacing="16">
                                    <TextBlock Grid.Column="0" 
                                               Classes="RangeLabel" 
                                               Text="0.3"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"/>
                                    <Slider Grid.Column="1" 
                                            Minimum="0.3" 
                                            Maximum="1" 
                                            Value="{Binding ClimbSensitivity}"
                                            TickFrequency="0.01"
                                            VerticalAlignment="Center"/>
                                    <NumericUpDown Grid.Column="2" 
                                                   Value="{Binding ClimbSensitivity}"
                                                   Minimum="0.3" 
                                                   Maximum="1"
                                                   Increment="0.01"
                                                   FormatString="F2"/>
                                </Grid>
                                
                                <TextBlock Classes="RangeLabel" 
                                           Text="1.0" 
                                           HorizontalAlignment="Right"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Spin While Armed -->
                        <Border Classes="TuningCard">
                            <StackPanel>
                                <TextBlock Classes="CardLabel" Text="Spin While Armed"/>
                                <TextBlock Classes="CardDescription" Text="Adjust the motors spin for arming status"/>
                                
                                <Grid ColumnDefinitions="80,*,140" ColumnSpacing="16">
                                    <TextBlock Grid.Column="0" 
                                               Classes="RangeLabel" 
                                               Text="0.0"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"/>
                                    <Slider Grid.Column="1" 
                                            Minimum="0" 
                                            Maximum="1" 
                                            Value="{Binding SpinWhileArmed}"
                                            TickFrequency="0.01"
                                            VerticalAlignment="Center"/>
                                    <NumericUpDown Grid.Column="2" 
                                                   Value="{Binding SpinWhileArmed}"
                                                   Minimum="0" 
                                                   Maximum="1"
                                                   Increment="0.01"
                                                   FormatString="F2"/>
                                </Grid>
                                
                                <TextBlock Classes="RangeLabel" 
                                           Text="1.0" 
                                           HorizontalAlignment="Right"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- ADVANCED TUNING TAB -->
                    <StackPanel IsVisible="{Binding IsAdvancedTuningSelected}">
                        
                        <!-- Axis Selector -->
                        <Border Background="#F9FAFB" 
                                CornerRadius="12" 
                                Padding="8" 
                                Margin="0,0,0,24" 
                                HorizontalAlignment="Left"
                                BoxShadow="inset 0 2 4 0 #10000000">
                            <StackPanel Orientation="Horizontal" Spacing="12">
                                <RadioButton Content="Roll" 
                                             IsChecked="{Binding IsRollSelected}"
                                             GroupName="AxisGroup"
                                             Classes="AxisToggle"/>
                                <RadioButton Content="Pitch" 
                                             IsChecked="{Binding IsPitchSelected}"
                                             GroupName="AxisGroup"
                                             Classes="AxisToggle"/>
                                <RadioButton Content="Yaw" 
                                             IsChecked="{Binding IsYawSelected}"
                                             GroupName="AxisGroup"
                                             Classes="AxisToggle"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Angle Controller P Gain -->
                        <Border Classes="TuningCard">
                            <StackPanel>
                                <TextBlock Classes="CardLabel" Text="Angle Controller P Gain"/>
                                <TextBlock Classes="CardDescription" Text="Stabilize mode responsiveness"/>
                                
                                <Grid ColumnDefinitions="80,*,140" ColumnSpacing="16">
                                    <TextBlock Grid.Column="0" 
                                               Classes="RangeLabel" 
                                               Text="3"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"/>
                                    <Slider Grid.Column="1" 
                                            Minimum="3" 
                                            Maximum="12" 
                                            Value="{Binding AngleP}"
                                            TickFrequency="0.1"
                                            VerticalAlignment="Center"/>
                                    <NumericUpDown Grid.Column="2" 
                                                   Value="{Binding AngleP}"
                                                   Minimum="3" 
                                                   Maximum="12"
                                                   Increment="0.1"
                                                   FormatString="F1"/>
                                </Grid>
                                
                                <TextBlock Classes="RangeLabel" 
                                           Text="12" 
                                           HorizontalAlignment="Right"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Rate Controller P Gain -->
                        <Border Classes="TuningCard">
                            <StackPanel>
                                <TextBlock Classes="CardLabel" Text="Rate Controller P Gain"/>
                                <TextBlock Classes="CardDescription" Text="Proportional gain for rate control"/>
                                
                                <Grid ColumnDefinitions="80,*,140" ColumnSpacing="16">
                                    <TextBlock Grid.Column="0" 
                                               Classes="RangeLabel" 
                                               Text="0.01"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"/>
                                    <Slider Grid.Column="1" 
                                            Minimum="0.01" 
                                            Maximum="0.5" 
                                            Value="{Binding RateP}"
                                            TickFrequency="0.001"
                                            VerticalAlignment="Center"/>
                                    <NumericUpDown Grid.Column="2" 
                                                   Value="{Binding RateP}"
                                                   Minimum="0.01" 
                                                   Maximum="0.5"
                                                   Increment="0.001"
                                                   FormatString="F3"/>
                                </Grid>
                                
                                <TextBlock Classes="RangeLabel" 
                                           Text="0.5" 
                                           HorizontalAlignment="Right"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Rate Controller I Gain -->
                        <Border Classes="TuningCard">
                            <StackPanel>
                                <TextBlock Classes="CardLabel" Text="Rate Controller I Gain"/>
                                <TextBlock Classes="CardDescription" Text="Integral gain for steady-state error"/>
                                
                                <Grid ColumnDefinitions="80,*,140" ColumnSpacing="16">
                                    <TextBlock Grid.Column="0" 
                                               Classes="RangeLabel" 
                                               Text="0.01"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"/>
                                    <Slider Grid.Column="1" 
                                            Minimum="0.01" 
                                            Maximum="2" 
                                            Value="{Binding RateI}"
                                            TickFrequency="0.01"
                                            VerticalAlignment="Center"/>
                                    <NumericUpDown Grid.Column="2" 
                                                   Value="{Binding RateI}"
                                                   Minimum="0.01" 
                                                   Maximum="2"
                                                   Increment="0.001"
                                                   FormatString="F3"/>
                                </Grid>
                                
                                <TextBlock Classes="RangeLabel" 
                                           Text="2.0" 
                                           HorizontalAlignment="Right"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                        
                        <!-- Rate Controller D Gain -->
                        <Border Classes="TuningCard">
                            <StackPanel>
                                <TextBlock Classes="CardLabel" Text="Rate Controller D Gain"/>
                                <TextBlock Classes="CardDescription" Text="Derivative gain for dampening"/>
                                
                                <Grid ColumnDefinitions="80,*,140" ColumnSpacing="16">
                                    <TextBlock Grid.Column="0" 
                                               Classes="RangeLabel" 
                                               Text="0.0"
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"/>
                                    <Slider Grid.Column="1" 
                                            Minimum="0" 
                                            Maximum="0.5" 
                                            Value="{Binding RateD}"
                                            TickFrequency="0.0001"
                                            VerticalAlignment="Center"/>
                                    <NumericUpDown Grid.Column="2" 
                                                   Value="{Binding RateD}"
                                                   Minimum="0" 
                                                   Maximum="0.5"
                                                   Increment="0.0001"
                                                   FormatString="F4"/>
                                </Grid>
                                
                                <TextBlock Classes="RangeLabel" 
                                           Text="0.5" 
                                           HorizontalAlignment="Right"
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- AUTO TUNING TAB -->
                    <StackPanel IsVisible="{Binding IsAutoTuningSelected}">
                        
                        <!-- Axes to AutoTune -->
                        <Border Classes="TuningCard">
                            <StackPanel>
                                <TextBlock Classes="CardLabel" Text="Axes to AutoTune"/>
                                <TextBlock Classes="CardDescription" Text="Select which axes to automatically tune"/>
                                <StackPanel Orientation="Horizontal" Spacing="20" Margin="0,8,0,0">
                                    <CheckBox Content="Roll" IsChecked="{Binding AutoTuneRoll}" FontSize="14" FontWeight="Medium"/>
                                    <CheckBox Content="Pitch" IsChecked="{Binding AutoTunePitch}" FontSize="14" FontWeight="Medium"/>
                                    <CheckBox Content="Yaw" IsChecked="{Binding AutoTuneYaw}" FontSize="14" FontWeight="Medium"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        
                        <!-- Channel for AutoTune Switch -->
                        <Border Classes="TuningCard">
                            <Grid ColumnDefinitions="*,*" ColumnSpacing="24">
                                <StackPanel Grid.Column="0">
                                    <TextBlock Classes="CardLabel" Text="AutoTune Switch Channel"/>
                                    <TextBlock Classes="CardDescription" Text="RC channel to trigger AutoTune" Margin="0,0,0,12"/>
                                    <ComboBox ItemsSource="{Binding AutoTuneChannelOptions}"
                                              SelectedItem="{Binding SelectedAutoTuneChannel}"
                                              DisplayMemberBinding="{Binding Label}"
                                              Height="48"
                                              CornerRadius="12"
                                              BorderThickness="2"
                                              FontSize="14"
                                              MinWidth="200"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock Classes="CardLabel" Text="Channel Value"/>
                                    <TextBlock Classes="CardDescription" Text="Current channel reading" Margin="0,0,0,12"/>
                                    <NumericUpDown Value="0" 
                                                   IsEnabled="False"
                                                   Height="48"
                                                   MinWidth="140"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                        
                        <!-- In Flight Tuning Section -->
                        <Border Classes="TuningCard">
                            <StackPanel>
                                <TextBlock Classes="CardLabel" Text="In-Flight Tuning"/>
                                <TextBlock Classes="CardDescription" Text="Configure real-time parameter adjustment via RC transmitter" Margin="0,0,0,16"/>
                                
                                <Grid ColumnDefinitions="2*,*,*" ColumnSpacing="20">
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="RC Channel 6 Option" 
                                                   FontSize="13" 
                                                   FontWeight="Medium" 
                                                   Foreground="#6B7280"
                                                   Margin="0,0,0,8"/>
                                        <ComboBox ItemsSource="{Binding InFlightTuningOptions}"
                                                  SelectedItem="{Binding SelectedTuneOption}"
                                                  DisplayMemberBinding="{Binding Label}"
                                                  Height="48"
                                                  CornerRadius="12"
                                                  BorderThickness="2"
                                                  FontSize="14"
                                                  MinWidth="220"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="Min" 
                                                   FontSize="13" 
                                                   FontWeight="Medium" 
                                                   Foreground="#6B7280"
                                                   Margin="0,0,0,8"/>
                                        <NumericUpDown Value="{Binding TuneMin}"
                                                       Minimum="0" 
                                                       Maximum="1000"
                                                       Increment="0.01"
                                                       FormatString="F2"
                                                       Height="48"
                                                       MinWidth="120"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="2">
                                        <TextBlock Text="Max" 
                                                   FontSize="13" 
                                                   FontWeight="Medium" 
                                                   Foreground="#6B7280"
                                                   Margin="0,0,0,8"/>
                                        <NumericUpDown Value="{Binding TuneMax}"
                                                       Minimum="0" 
                                                       Maximum="1000"
                                                       Increment="0.01"
                                                       FormatString="F2"
                                                       Height="48"
                                                       MinWidth="120"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>

                <!-- RIGHT: SUMMARY PANEL -->
                <Border Grid.Column="2" Classes="SummaryCard" VerticalAlignment="Top">
                    <StackPanel>
                        <TextBlock Text="?? Summary" 
                                   FontSize="18" 
                                   FontWeight="Bold" 
                                   Foreground="#111827"
                                   HorizontalAlignment="Center"
                                   Margin="0,0,0,20"/>
                        
                        <TextBlock Text="{Binding SummaryTitle}" 
                                   FontSize="14" 
                                   FontWeight="SemiBold" 
                                   Foreground="#3B82F6"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,16"/>
                        
                        <ItemsControl ItemsSource="{Binding SummaryItems}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="White" 
                                            BorderBrush="#E5E7EB" 
                                            BorderThickness="1"
                                            CornerRadius="8" 
                                            Padding="12" 
                                            Margin="0,0,0,8">
                                        <StackPanel>
                                            <TextBlock Text="{Binding Parameter}" 
                                                       FontSize="12" 
                                                       FontWeight="Medium" 
                                                       Foreground="#6B7280"/>
                                            <TextBlock Text="{Binding Value}" 
                                                       FontSize="16" 
                                                       FontWeight="SemiBold" 
                                                       Foreground="#111827"
                                                       Margin="0,4,0,0"/>
                                        </StackPanel>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- FOOTER INFO -->
            <Border Background="#EFF6FF" 
                    BorderBrush="#BFDBFE"
                    BorderThickness="1"
                    CornerRadius="12" 
                    Padding="20" 
                    Margin="0,16,0,0">
