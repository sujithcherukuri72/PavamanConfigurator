<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PavamanDroneConfigurator.UI.ViewModels"
             x:Class="PavamanDroneConfigurator.UI.Views.ParametersPage"
             x:DataType="vm:ParametersPageViewModel">

    <UserControl.Styles>
        <!-- Modern Card Style -->
        <Style Selector="Border.card">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="BoxShadow" Value="0 1 3 0 #10000000"/>
        </Style>

        <!-- Section Header Style -->
        <Style Selector="TextBlock.section-title">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- DataGrid Header Style -->
        <Style Selector="DataGridColumnHeader">
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,10"/>
        </Style>

        <!-- DataGrid Row Styles -->
        <Style Selector="DataGridRow:nth-child(even)">
            <Setter Property="Background" Value="#FAFAFA"/>
        </Style>
        
        <Style Selector="DataGridRow:pointerover /template/ Rectangle#BackgroundRectangle">
            <Setter Property="Fill" Value="#F3F4F6"/>
        </Style>

        <!-- Button Styles -->
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style Selector="Button.primary:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#2563EB"/>
        </Style>
        
        <Style Selector="Button.primary:disabled /template/ ContentPresenter">
            <Setter Property="Background" Value="#D1D5DB"/>
            <Setter Property="Cursor" Value="Arrow"/>
        </Style>

        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style Selector="Button.secondary:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#F9FAFB"/>
        </Style>
        
        <Style Selector="Button.action-btn">
            <Setter Property="Background" Value="#10B981"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="16,6"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        
        <Style Selector="Button.action-btn:pointerover /template/ ContentPresenter">
            <Setter Property="Background" Value="#059669"/>
        </Style>
        
        <!-- Loading Spinner -->
        <Style Selector="ProgressBar.spinner">
            <Setter Property="IsIndeterminate" Value="True"/>
            <Setter Property="Height" Value="4"/>
            <Setter Property="Foreground" Value="#3B82F6"/>
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="Auto,*" Margin="32,24">
        <!-- Header Section -->
        <StackPanel Grid.Row="0" Spacing="20" Margin="0,0,0,24">
            <!-- Title -->
            <StackPanel Spacing="8">
                <TextBlock Text="Parameters" FontSize="32" FontWeight="Bold" Foreground="#111827"/>
                <TextBlock Text="View and modify drone configuration parameters" FontSize="14" Foreground="#6B7280"/>
            </StackPanel>

            <!-- Stats Cards -->
            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="16">
                <Border Grid.Column="0" Classes="card" Padding="16">
                    <StackPanel Spacing="4">
                        <TextBlock Text="Total Parameters" FontSize="12" Foreground="#6B7280"/>
                        <TextBlock Text="{Binding TotalParameterCount}" FontSize="28" FontWeight="Bold" Foreground="#111827"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Classes="card" Padding="16">
                    <StackPanel Spacing="4">
                        <TextBlock Text="Loaded" FontSize="12" Foreground="#6B7280"/>
                        <TextBlock Text="{Binding LoadedParameterCount}" FontSize="28" FontWeight="Bold" Foreground="#10B981"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Classes="card" Padding="16">
                    <StackPanel Spacing="4">
                        <TextBlock Text="Modified" FontSize="12" Foreground="#6B7280"/>
                        <TextBlock Text="{Binding ModifiedParameterCount}" FontSize="28" FontWeight="Bold" Foreground="#F59E0B"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Search and Actions -->
            <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="12">
                <TextBox Grid.Column="0"
                         Text="{Binding SearchText, Mode=TwoWay}"
                         Watermark="Search parameters by name or description..."
                         MinHeight="42"
                         Padding="12,10"
                         CornerRadius="8"
                         BorderBrush="#D1D5DB"
                         BorderThickness="1"/>

                <Button Grid.Column="1" 
                        Content="Refresh" 
                        Command="{Binding RefreshParametersCommand}"
                        Classes="secondary"
                        ToolTip.Tip="Reload parameters from drone"/>

                <Button Grid.Column="2" 
                        Content="Save All Changes" 
                        Command="{Binding SaveAllParametersCommand}"
                        Classes="primary"
                        IsEnabled="{Binding HasUnsavedChanges}"
                        ToolTip.Tip="Save all modified parameters to drone"/>
            </Grid>

            <!-- Loading Indicator -->
            <ProgressBar Classes="spinner" IsVisible="{Binding IsRefreshing}" />

            <!-- Status Message -->
            <Border Classes="card" Background="#F9FAFB" IsVisible="{Binding HasStatusMessage}">
                <TextBlock Text="{Binding StatusMessage}" 
                           FontSize="13" 
                           Foreground="#374151"
                           TextWrapping="Wrap"
                           Padding="4"/>
            </Border>
        </StackPanel>

        <!-- Parameters DataGrid -->
        <Border Grid.Row="1" Classes="card" Padding="0">
            <Grid RowDefinitions="*,Auto">
                <DataGrid Grid.Row="0"
                          ItemsSource="{Binding FilteredParameters}" 
                          SelectedItem="{Binding SelectedParameter}" 
                          AutoGenerateColumns="False" 
                          IsEnabled="{Binding CanEditParameters}"
                          GridLinesVisibility="Horizontal"
                          BorderThickness="0"
                          HeadersVisibility="Column"
                          CanUserReorderColumns="True"
                          CanUserResizeColumns="True"
                          CanUserSortColumns="True"
                          SelectionMode="Single">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Parameter Name" 
                                            Binding="{Binding Name}" 
                                            Width="2*" 
                                            IsReadOnly="True"
                                            FontWeight="SemiBold"/>

                        <DataGridTextColumn Header="Value" 
                                            Binding="{Binding Value, Mode=TwoWay}" 
                                            Width="*"
                                            FontFamily="Consolas"/>

                        <DataGridTextColumn Header="Description" 
                                            Binding="{Binding Description}" 
                                            Width="3*" 
                                            IsReadOnly="True"
                                            Foreground="#6B7280"/>

                        <DataGridTemplateColumn Header="Actions" Width="Auto">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Content="Apply" 
                                            Command="{Binding $parent[DataGrid].((vm:ParametersPageViewModel)DataContext).SaveParameterCommand}"
                                            CommandParameter="{Binding}"
                                            Classes="action-btn"
                                            ToolTip.Tip="Write this parameter value to the drone"
                                            Margin="4"/>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                
                <!-- Footer Info -->
                <Border Grid.Row="1" 
                        Background="#F9FAFB" 
                        BorderBrush="#E5E7EB" 
                        BorderThickness="0,1,0,0"
                        Padding="16,12">
                    <StackPanel Orientation="Horizontal" Spacing="16">
                        <TextBlock FontSize="12" Foreground="#6B7280">
                            <Run Text="Showing"/>
                            <Run Text="{Binding FilteredParameters.Count}" FontWeight="SemiBold"/>
                            <Run Text="of"/>
                            <Run Text="{Binding TotalParameterCount}" FontWeight="SemiBold"/>
                            <Run Text="parameters"/>
                        </TextBlock>
                        <TextBlock Text="ï¿½" FontSize="12" Foreground="#D1D5DB"/>
                        <TextBlock Text="Double-click a value to edit" FontSize="12" Foreground="#6B7280" FontStyle="Italic"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</UserControl>
