<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PavamanDroneConfigurator.UI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="700"
             x:Class="PavamanDroneConfigurator.UI.Views.DroneDetailsPage"
             x:DataType="vm:DroneDetailsPageViewModel">

    <UserControl.Styles>
        <!-- Modern Card Style -->
        <Style Selector="Border.card">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="BoxShadow" Value="0 1 3 0 #10000000"/>
        </Style>

        <!-- Section Header Style -->
        <Style Selector="TextBlock.section-title">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#3B82F6"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Label Style -->
        <Style Selector="TextBlock.label">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <!-- Value Style -->
        <Style Selector="TextBlock.value">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- Checksum Style (monospace for hashes) -->
        <Style Selector="TextBlock.checksum">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontFamily" Value="Consolas, Courier New, monospace"/>
            <Setter Property="Foreground" Value="#6B7280"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>

        <!-- Primary Button -->
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="24,10"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <Style Selector="Button.primary:pointerover">
            <Setter Property="Background" Value="#2563EB"/>
        </Style>

        <Style Selector="Button.primary:disabled">
            <Setter Property="Background" Value="#9CA3AF"/>
            <Setter Property="Opacity" Value="0.6"/>
        </Style>

        <!-- Image Container Style -->
        <Style Selector="Border.image-container">
            <Setter Property="Background" Value="#F3F4F6"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
        </Style>

        <!-- Status Badge -->
        <Style Selector="Border.status-armed">
            <Setter Property="Background" Value="#FEE2E2"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>

        <Style Selector="Border.status-disarmed">
            <Setter Property="Background" Value="#DCFCE7"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="8,4"/>
        </Style>
    </UserControl.Styles>

    <ScrollViewer>
        <StackPanel Margin="32,24" Spacing="24" MaxWidth="1000">
            <!-- Header -->
            <Grid ColumnDefinitions="*,Auto">
                <StackPanel Spacing="8">
                    <TextBlock Text="DRONE DETAILS" FontSize="28" FontWeight="Bold" Foreground="#3B82F6"/>
                    <TextBlock Text="View your drone's identification and version information" 
                               FontSize="14" 
                               Foreground="#6B7280"/>
                </StackPanel>
                
                <Button Grid.Column="1"
                        Content="? Refresh"
                        Command="{Binding RefreshCommand}"
                        IsEnabled="{Binding IsConnected}"
                        Classes="primary"/>
            </Grid>

            <!-- Loading Indicator -->
            <Border Classes="card" IsVisible="{Binding IsLoading}">
                <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Center">
                    <ProgressBar IsIndeterminate="True" Width="200" Height="4"/>
                    <TextBlock Text="Loading drone details..." Foreground="#6B7280"/>
                </StackPanel>
            </Border>

            <!-- Main Content -->
            <Border Classes="card" IsVisible="{Binding !IsLoading}">
                <Grid ColumnDefinitions="350,*" RowDefinitions="Auto">
                    <!-- Left Side - Drone Image -->
                    <Border Grid.Column="0" Classes="image-container" Margin="0,0,24,0">
                        <Image Source="avares://PavamanDroneConfigurator.UI/Assets/Images/Drone-Image.png"
                               Stretch="Uniform"
                               MaxHeight="350"
                               MaxWidth="300"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    </Border>

                    <!-- Right Side - Drone Information -->
                    <StackPanel Grid.Column="1" Spacing="20">
                        
                        <!-- Drone ID -->
                        <Grid ColumnDefinitions="150,*" RowDefinitions="Auto">
                            <TextBlock Grid.Column="0" Text="Drone ID :" Classes="label"/>
                            <TextBlock Grid.Column="1" Text="{Binding DroneId}" Classes="value"/>
                        </Grid>

                        <!-- FC ID -->
                        <Grid ColumnDefinitions="150,*" RowDefinitions="Auto">
                            <TextBlock Grid.Column="0" Text="FC ID :" Classes="label"/>
                            <TextBlock Grid.Column="1" Text="{Binding FcId}" Classes="value"/>
                        </Grid>

                        <!-- Firmware Version -->
                        <Grid ColumnDefinitions="150,*" RowDefinitions="Auto">
                            <TextBlock Grid.Column="0" Text="Firmware Version :" Classes="label"/>
                            <TextBlock Grid.Column="1" Text="{Binding FirmwareVersion}" Classes="value"/>
                        </Grid>

                        <!-- Code Checksum -->
                        <Grid ColumnDefinitions="150,*" RowDefinitions="Auto">
                            <TextBlock Grid.Column="0" Text="Code Checksum :" Classes="label"/>
                            <TextBlock Grid.Column="1" Text="{Binding CodeChecksum}" Classes="checksum"/>
                        </Grid>

                        <!-- Data Checksum -->
                        <Grid ColumnDefinitions="150,*" RowDefinitions="Auto">
                            <TextBlock Grid.Column="0" Text="Data Checksum :" Classes="label"/>
                            <TextBlock Grid.Column="1" Text="{Binding DataChecksum}" Classes="checksum"/>
                        </Grid>

                    </StackPanel>
                </Grid>
            </Border>

            <!-- Additional Information Card -->
            <Border Classes="card" IsVisible="{Binding IsConnected}">
                <StackPanel Spacing="16">
                    <TextBlock Text="Additional Information" Classes="section-title"/>
                    
                    <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto" ColumnSpacing="24" RowSpacing="16">
                        
                        <!-- Vehicle Type -->
                        <StackPanel Grid.Row="0" Grid.Column="0">
                            <TextBlock Text="Vehicle Type" FontSize="12" Foreground="#6B7280" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding VehicleType}" FontSize="14" FontWeight="SemiBold" Foreground="#111827"/>
                        </StackPanel>

                        <!-- Autopilot Type -->
                        <StackPanel Grid.Row="0" Grid.Column="1">
                            <TextBlock Text="Autopilot" FontSize="12" Foreground="#6B7280" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding AutopilotType}" FontSize="14" FontWeight="SemiBold" Foreground="#111827"/>
                        </StackPanel>

                        <!-- Board Type -->
                        <StackPanel Grid.Row="1" Grid.Column="0">
                            <TextBlock Text="Board Type" FontSize="12" Foreground="#6B7280" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding BoardType}" FontSize="14" FontWeight="SemiBold" Foreground="#111827"/>
                        </StackPanel>

                        <!-- Flight Mode -->
                        <StackPanel Grid.Row="1" Grid.Column="1">
                            <TextBlock Text="Flight Mode" FontSize="12" Foreground="#6B7280" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding FlightMode}" FontSize="14" FontWeight="SemiBold" Foreground="#111827"/>
                        </StackPanel>

                        <!-- System ID -->
                        <StackPanel Grid.Row="2" Grid.Column="0">
                            <TextBlock Text="System ID" FontSize="12" Foreground="#6B7280" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding SystemId}" FontSize="14" FontWeight="SemiBold" Foreground="#111827"/>
                        </StackPanel>

                        <!-- Component ID -->
                        <StackPanel Grid.Row="2" Grid.Column="1">
                            <TextBlock Text="Component ID" FontSize="12" Foreground="#6B7280" Margin="0,0,0,4"/>
                            <TextBlock Text="{Binding ComponentId}" FontSize="14" FontWeight="SemiBold" Foreground="#111827"/>
                        </StackPanel>

                        <!-- Armed Status -->
                        <StackPanel Grid.Row="3" Grid.Column="0">
                            <TextBlock Text="Armed Status" FontSize="12" Foreground="#6B7280" Margin="0,0,0,4"/>
                            <Border Classes.status-armed="{Binding IsArmed}"
                                    Classes.status-disarmed="{Binding !IsArmed}"
                                    HorizontalAlignment="Left">
                                <TextBlock Text="{Binding IsArmed, Converter={StaticResource BoolToArmedTextConverter}}"
                                           FontSize="12" 
                                           FontWeight="SemiBold"
                                           Foreground="{Binding IsArmed, Converter={StaticResource BoolToArmedColorConverter}}"/>
                            </Border>
                        </StackPanel>

                    </Grid>
                </StackPanel>
            </Border>

            <!-- Not Connected Message -->
            <Border Classes="card" Background="#FEF3C7" IsVisible="{Binding !IsConnected}">
                <StackPanel Orientation="Horizontal" Spacing="12">
                    <TextBlock Text="?" FontSize="20"/>
                    <StackPanel Spacing="4">
                        <TextBlock Text="Not Connected" FontWeight="SemiBold" Foreground="#92400E"/>
                        <TextBlock Text="Connect to a drone to view its details" FontSize="13" Foreground="#A16207"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Status Message -->
            <TextBlock Text="{Binding StatusMessage}" 
                       FontSize="13" 
                       Foreground="#6B7280"
                       HorizontalAlignment="Center"
                       Margin="0,8,0,0"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>
