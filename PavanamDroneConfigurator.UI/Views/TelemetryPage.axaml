<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PavanamDroneConfigurator.UI.ViewModels"
             x:Class="PavanamDroneConfigurator.UI.Views.TelemetryPage"
             x:DataType="vm:TelemetryPageViewModel">

    <ScrollViewer>
        <StackPanel Margin="20" Spacing="15">
            <TextBlock Text="Telemetry Data" FontSize="24" FontWeight="Bold" />

            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto,Auto,Auto,Auto" Margin="0,10">
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Latitude:" Margin="5"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding CurrentTelemetry.Latitude, StringFormat='{}{0:F7}'}" Margin="5"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="Longitude:" Margin="5"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CurrentTelemetry.Longitude, StringFormat='{}{0:F7}'}" Margin="5"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="Altitude:" Margin="5"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding CurrentTelemetry.Altitude, StringFormat='{}{0:F2} m'}" Margin="5"/>

                <TextBlock Grid.Row="3" Grid.Column="0" Text="Ground Speed:" Margin="5"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding CurrentTelemetry.GroundSpeed, StringFormat='{}{0:F2} m/s'}" Margin="5"/>

                <TextBlock Grid.Row="4" Grid.Column="0" Text="Satellites:" Margin="5"/>
                <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding CurrentTelemetry.SatelliteCount}" Margin="5"/>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
