<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PavanamDroneConfigurator.UI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="PavanamDroneConfigurator.UI.Views.ConnectionPage"
             x:DataType="vm:ConnectionPageViewModel">

    <ScrollViewer>
        <StackPanel Margin="20" Spacing="15">
            <TextBlock Text="Connection Settings" FontSize="24" FontWeight="Bold" />

            <StackPanel Orientation="Horizontal" Spacing="10" VerticalAlignment="Center">
                <Ellipse Width="14" Height="14" Fill="{Binding ConnectionStatusBrush}" Stroke="Black" StrokeThickness="1"/>
                <TextBlock Text="{Binding ConnectionStatusText}" FontSize="16" FontWeight="Bold" />
            </StackPanel>

            <StackPanel Spacing="10">
                <TextBlock Text="Connection Type:" />
                <ComboBox SelectedIndex="{Binding ConnectionType}" IsEnabled="{Binding !IsConnected}">
                    <ComboBoxItem Content="Serial" />
                    <ComboBoxItem Content="TCP" />
                </ComboBox>
            </StackPanel>

            <!-- Serial Settings -->
            <Border BorderBrush="LightGray" BorderThickness="1" Padding="10" Margin="0,10,0,0">
                <StackPanel Spacing="10">
                    <TextBlock Text="Serial Connection Settings" FontWeight="Bold" />
                    <StackPanel Spacing="5">
                        <TextBlock Text="Port Name:" />
                        <ComboBox ItemsSource="{Binding AvailableSerialPorts}"
                                  SelectedItem="{Binding SelectedPortName}"
                                  IsEnabled="{Binding !IsConnected}" />
                    </StackPanel>
                    <StackPanel Spacing="5">
                        <TextBlock Text="Baud Rate:" />
                        <TextBox Text="{Binding BaudRate}" IsEnabled="{Binding !IsConnected}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- TCP Settings -->
            <Border BorderBrush="LightGray" BorderThickness="1" Padding="10" Margin="0,10,0,0">
                <StackPanel Spacing="10">
                    <TextBlock Text="TCP Connection Settings" FontWeight="Bold" />
                    <StackPanel Spacing="5">
                        <TextBlock Text="IP Address:" />
                        <TextBox Text="{Binding IpAddress}" IsEnabled="{Binding !IsConnected}" />
                    </StackPanel>
                    <StackPanel Spacing="5">
                        <TextBlock Text="TCP Port:" />
                        <TextBox Text="{Binding TcpPort}" IsEnabled="{Binding !IsConnected}" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                <Button Content="Connect" Command="{Binding ConnectCommand}" IsEnabled="{Binding !IsConnected}" />
                <Button Content="Disconnect" Command="{Binding DisconnectCommand}" IsEnabled="{Binding IsConnected}" />
            </StackPanel>

            <TextBlock Text="{Binding StatusMessage}" FontWeight="Bold" />

            <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,20,0,0" IsVisible="{Binding IsConnected}">
                <StackPanel Spacing="5">
                    <TextBlock Text="Telemetry" FontSize="18" FontWeight="Bold" />
                    <TextBlock Text="{Binding CurrentTelemetry.FlightMode, StringFormat='Flight Mode: {0}'}" />
                    <TextBlock Text="{Binding CurrentTelemetry.Armed, StringFormat='Armed: {0}'}" />
                    <TextBlock Text="{Binding CurrentTelemetry.BatteryVoltage, StringFormat='Battery: {0:F2}V'}" />
                    <TextBlock Text="{Binding CurrentTelemetry.SatelliteCount, StringFormat='Satellites: {0}'}" />
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
