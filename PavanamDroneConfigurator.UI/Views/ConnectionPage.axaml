<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:PavanamDroneConfigurator.UI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="PavanamDroneConfigurator.UI.Views.ConnectionPage"
             x:DataType="vm:ConnectionPageViewModel">

    <UserControl.Styles>
        <Style Selector="TextBlock.section-header">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <Style Selector="Border.section">
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Background" Value="White"/>
        </Style>
    </UserControl.Styles>

    <ScrollViewer>
        <StackPanel Margin="20" Spacing="20" MaxWidth="700">
            <TextBlock Text="Connection Settings" FontSize="28" FontWeight="Bold" />

            <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
                <Ellipse Width="16" Height="16" Fill="{Binding ConnectionStatusBrush}" Stroke="#333" StrokeThickness="2"/>
                <TextBlock Text="{Binding ConnectionStatusText}" FontSize="18" FontWeight="Bold" />
            </StackPanel>

            <StackPanel Spacing="10">
                <TextBlock Text="Connection Type" FontSize="14" FontWeight="SemiBold" />
                <ComboBox SelectedIndex="{Binding ConnectionType}" IsEnabled="{Binding !IsConnected}" HorizontalAlignment="Stretch">
                    <ComboBoxItem Content="Serial (USB)" />
                    <ComboBoxItem Content="TCP (Network)" />
                </ComboBox>
            </StackPanel>

            <!-- Serial Settings -->
            <Border Classes="section">
                <StackPanel Spacing="12">
                    <TextBlock Text="Serial Connection Settings" Classes="section-header" />
                    <StackPanel Spacing="8">
                        <TextBlock Text="Port Name" FontWeight="SemiBold" />
                        <ComboBox ItemsSource="{Binding AvailableSerialPorts}"
                                  SelectedItem="{Binding SelectedSerialPort}"
                                  IsEnabled="{Binding !IsConnected}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding DisplayName}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Spacing="8">
                        <TextBlock Text="Baud Rate" FontWeight="SemiBold" />
                        <TextBox Text="{Binding BaudRate}" IsEnabled="{Binding !IsConnected}" Watermark="e.g., 115200" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- TCP Settings -->
            <Border Classes="section">
                <StackPanel Spacing="12">
                    <TextBlock Text="TCP Connection Settings" Classes="section-header" />
                    <StackPanel Spacing="8">
                        <TextBlock Text="IP Address" FontWeight="SemiBold" />
                        <TextBox Text="{Binding IpAddress}" IsEnabled="{Binding !IsConnected}" Watermark="e.g., 192.168.1.100" />
                    </StackPanel>
                    <StackPanel Spacing="8">
                        <TextBlock Text="TCP Port" FontWeight="SemiBold" />
                        <TextBox Text="{Binding TcpPort}" IsEnabled="{Binding !IsConnected}" Watermark="e.g., 5760" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <StackPanel Orientation="Horizontal" Spacing="15" Margin="0,10,0,0">
                <Button Content="Connect" 
                        Command="{Binding ConnectCommand}" 
                        IsEnabled="{Binding !IsConnected}"
                        Padding="25,10"
                        FontSize="16"
                        FontWeight="SemiBold" />
                <Button Content="Disconnect" 
                        Command="{Binding DisconnectCommand}" 
                        IsEnabled="{Binding IsConnected}"
                        Padding="25,10"
                        FontSize="16"
                        FontWeight="SemiBold" />
            </StackPanel>

            <TextBlock Text="{Binding StatusMessage}" FontWeight="SemiBold" FontSize="14" Foreground="#666" />
        </StackPanel>
    </ScrollViewer>
</UserControl>
