<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:PavanamDroneConfigurator.UI.ViewModels"
             x:Class="PavanamDroneConfigurator.UI.Views.ParametersPage"
             x:DataType="vm:ParametersPageViewModel">

    <UserControl.Styles>
        <!-- Modern Card Style -->
        <Style Selector="Border.card">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="BoxShadow" Value="0 1 3 0 #10000000"/>
        </Style>

        <!-- Section Header Style -->
        <Style Selector="TextBlock.section-title">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- DataGrid Header Style -->
        <Style Selector="DataGridColumnHeader">
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="Foreground" Value="#111827"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="12,10"/>
        </Style>

        <!-- Button Styles -->
        <Style Selector="Button.primary">
            <Setter Property="Background" Value="#3B82F6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style Selector="Button.secondary">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="20,10"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </UserControl.Styles>

    <Grid RowDefinitions="Auto,*" Margin="32,24">
        <!-- Header Section -->
        <StackPanel Grid.Row="0" Spacing="20" Margin="0,0,0,24">
            <!-- Title -->
            <StackPanel Spacing="8">
                <TextBlock Text="Parameters" FontSize="32" FontWeight="Bold" Foreground="#111827"/>
                <TextBlock Text="View and modify drone configuration parameters" FontSize="14" Foreground="#6B7280"/>
            </StackPanel>

            <!-- Stats Cards -->
            <Grid ColumnDefinitions="*,*,*" ColumnSpacing="16">
                <Border Grid.Column="0" Classes="card" Padding="16">
                    <StackPanel Spacing="4">
                        <TextBlock Text="Total Parameters" FontSize="12" Foreground="#6B7280"/>
                        <TextBlock Text="{Binding TotalParameterCount}" FontSize="28" FontWeight="Bold" Foreground="#111827"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Classes="card" Padding="16">
                    <StackPanel Spacing="4">
                        <TextBlock Text="Loaded" FontSize="12" Foreground="#6B7280"/>
                        <TextBlock Text="{Binding LoadedParameterCount}" FontSize="28" FontWeight="Bold" Foreground="#10B981"/>
                    </StackPanel>
                </Border>

                <Border Grid.Column="2" Classes="card" Padding="16">
                    <StackPanel Spacing="4">
                        <TextBlock Text="Modified" FontSize="12" Foreground="#6B7280"/>
                        <TextBlock Text="{Binding ModifiedParameterCount}" FontSize="28" FontWeight="Bold" Foreground="#F59E0B"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Search and Actions -->
            <Grid ColumnDefinitions="*,Auto,Auto" ColumnSpacing="12">
                <TextBox Grid.Column="0"
                         Text="{Binding SearchText, Mode=TwoWay}"
                         Watermark="Search parameters by name or description..."
                         MinHeight="42"
                         Padding="12,10"
                         CornerRadius="8"/>

                <Button Grid.Column="1" 
                        Content="Refresh" 
                        Command="{Binding RefreshParametersCommand}"
                        Classes="secondary"
                        IsEnabled="{Binding CanEditParameters}"/>

                <Button Grid.Column="2" 
                        Content="Save Changes" 
                        Command="{Binding SaveAllParametersCommand}"
                        Classes="primary"
                        IsEnabled="{Binding HasUnsavedChanges}"/>
            </Grid>

            <!-- Status Message -->
            <Border Classes="card" Background="#F9FAFB" IsVisible="{Binding HasStatusMessage}">
                <TextBlock Text="{Binding StatusMessage}" 
                           FontSize="13" 
                           Foreground="#374151"
                           TextWrapping="Wrap"/>
            </Border>
        </StackPanel>

        <!-- Parameters DataGrid -->
        <Border Grid.Row="1" Classes="card" Padding="0">
            <DataGrid ItemsSource="{Binding FilteredParameters}" 
                      SelectedItem="{Binding SelectedParameter}" 
                      AutoGenerateColumns="False" 
                      IsEnabled="{Binding CanEditParameters}"
                      GridLinesVisibility="Horizontal"
                      BorderThickness="0"
                      HeadersVisibility="Column"
                      CanUserReorderColumns="True"
                      CanUserResizeColumns="True"
                      CanUserSortColumns="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Parameter Name" 
                                        Binding="{Binding Name}" 
                                        Width="2*" 
                                        IsReadOnly="True"/>

                    <DataGridTextColumn Header="Value" 
                                        Binding="{Binding Value}" 
                                        Width="*"/>

                    <DataGridTextColumn Header="Description" 
                                        Binding="{Binding Description}" 
                                        Width="3*" 
                                        IsReadOnly="True"/>

                    <DataGridTemplateColumn Header="Actions" Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Set" 
                                        Command="{Binding $parent[DataGrid].((vm:ParametersPageViewModel)DataContext).SaveParameterCommand}"
                                        CommandParameter="{Binding}"
                                        Classes="secondary"
                                        Padding="16,6"
                                        FontSize="12"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</UserControl>
