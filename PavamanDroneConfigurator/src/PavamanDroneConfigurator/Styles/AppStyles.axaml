<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Primary Button (Green Filled) -->
    <Style Selector="Button.primary">
        <Setter Property="Background" Value="#4CAF50"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>
    <Style Selector="Button.primary:pointerover /template/ ContentPresenter">
        <Setter Property="Background" Value="#45A049"/>
    </Style>
    <Style Selector="Button.primary:pressed /template/ ContentPresenter">
        <Setter Property="Background" Value="#3D8B40"/>
    </Style>

    <!-- Secondary Button (Outlined) -->
    <Style Selector="Button.secondary">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#4CAF50"/>
        <Setter Property="BorderBrush" Value="#4CAF50"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>
    <Style Selector="Button.secondary:pointerover">
        <Setter Property="Background" Value="#E8F5E9"/>
    </Style>

    <!-- Tab Button -->
    <Style Selector="Button.tab">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#757575"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="16,10"/>
        <Setter Property="Margin" Value="0,0,8,0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>
    <Style Selector="Button.tab:pointerover">
        <Setter Property="Background" Value="#F5F5F5"/>
    </Style>
    <Style Selector="Button.tab.active">
        <Setter Property="Background" Value="#4CAF50"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <!-- Toggle Button Group (for Data Bits, Parity, etc.) -->
    <Style Selector="ToggleButton.toggle-group">
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="Foreground" Value="#424242"/>
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Margin" Value="0,0,4,0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="CornerRadius" Value="4"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>
    <Style Selector="ToggleButton.toggle-group:pointerover">
        <Setter Property="Background" Value="#F5F5F5"/>
    </Style>
    <Style Selector="ToggleButton.toggle-group:checked">
        <Setter Property="Background" Value="#4CAF50"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderBrush" Value="#4CAF50"/>
    </Style>

    <!-- Card Panel -->
    <Style Selector="Border.card">
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="8"/>
        <Setter Property="Padding" Value="20"/>
        <Setter Property="Margin" Value="8"/>
        <Setter Property="BoxShadow" Value="0 2 8 0 #10000000"/>
    </Style>

    <!-- Section Header -->
    <Style Selector="TextBlock.section-header">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="#212121"/>
        <Setter Property="Margin" Value="0,0,0,16"/>
    </Style>

    <!-- Label -->
    <Style Selector="TextBlock.label">
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Foreground" Value="#757575"/>
        <Setter Property="Margin" Value="0,0,0,6"/>
        <Setter Property="FontWeight" Value="Medium"/>
    </Style>

    <!-- Status Message (Green) -->
    <Style Selector="TextBlock.status">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#4CAF50"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- Navigation Item -->
    <Style Selector="Button.nav-item">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="#424242"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="HorizontalAlignment" Value="Stretch"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="Padding" Value="16,12"/>
        <Setter Property="Margin" Value="4,2"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Medium"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="Background" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>
    <Style Selector="Button.nav-item:pointerover">
        <Setter Property="Background" Value="#F5F5F5"/>
    </Style>
    <Style Selector="Button.nav-item:pressed">
        <Setter Property="Background" Value="#EEEEEE"/>
    </Style>
    <Style Selector="Button.nav-item.active">
        <Setter Property="Background" Value="#E8F5E9"/>
        <Setter Property="Foreground" Value="#4CAF50"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <!-- ComboBox -->
    <Style Selector="ComboBox">
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="MinHeight" Value="38"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>
    <Style Selector="ComboBox:pointerover">
        <Setter Property="BorderBrush" Value="#BDBDBD"/>
    </Style>
    <Style Selector="ComboBox:focus">
        <Setter Property="BorderBrush" Value="#4CAF50"/>
    </Style>

    <!-- TextBox -->
    <Style Selector="TextBox">
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="MinHeight" Value="38"/>
        <Setter Property="Transitions">
            <Transitions>
                <BrushTransition Property="BorderBrush" Duration="0:0:0.2"/>
            </Transitions>
        </Setter>
    </Style>
    <Style Selector="TextBox:pointerover">
        <Setter Property="BorderBrush" Value="#BDBDBD"/>
    </Style>
    <Style Selector="TextBox:focus">
        <Setter Property="BorderBrush" Value="#4CAF50"/>
    </Style>

    <!-- NumericUpDown -->
    <Style Selector="NumericUpDown">
        <Setter Property="Background" Value="#FFFFFF"/>
        <Setter Property="BorderBrush" Value="#E0E0E0"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="CornerRadius" Value="6"/>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="MinHeight" Value="38"/>
    </Style>
    <Style Selector="NumericUpDown:pointerover">
        <Setter Property="BorderBrush" Value="#BDBDBD"/>
    </Style>
    <Style Selector="NumericUpDown:focus">
        <Setter Property="BorderBrush" Value="#4CAF50"/>
    </Style>

    <!-- Progress Bar -->
    <Style Selector="ProgressBar">
        <Setter Property="Foreground" Value="#4CAF50"/>
        <Setter Property="Background" Value="#E0E0E0"/>
        <Setter Property="Height" Value="6"/>
        <Setter Property="CornerRadius" Value="3"/>
    </Style>

    <!-- Slider -->
    <Style Selector="Slider">
        <Setter Property="Foreground" Value="#4CAF50"/>
    </Style>
</Styles>
