<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="PavamanDroneConfigurator.Views.SplashScreen"
        SystemDecorations="None"
        WindowStartupLocation="CenterScreen"
        CanResize="False"
        Width="600" Height="400"
        Background="Transparent"
        TransparencyLevelHint="Transparent">
    
    <Border CornerRadius="12" Background="White" 
            BorderBrush="#4CAF50" BorderThickness="3"
            BoxShadow="0 10 30 5 #40000000">
        <Grid RowDefinitions="*,Auto,Auto,Auto,*">
            
            <!-- Logo and Icon -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Center" Spacing="20">
                <!-- Drone Icon/Logo -->
                <Border Width="120" Height="120" 
                        Background="#4CAF50" 
                        CornerRadius="60"
                        BoxShadow="0 5 15 2 #40000000">
                    <Viewbox Width="70" Height="70">
                        <Canvas Width="24" Height="24">
                            <Path Fill="White" Data="M12,2L4.5,20.29L5.21,21L12,18L18.79,21L19.5,20.29L12,2Z"/>
                        </Canvas>
                    </Viewbox>
                </Border>
                
                <!-- App Name -->
                <TextBlock Text="PAVAMAN" 
                          FontSize="32" 
                          FontWeight="Bold" 
                          Foreground="#4CAF50"
                          HorizontalAlignment="Center"
                          LetterSpacing="2"/>
                
                <TextBlock Text="DRONE CONFIGURATOR" 
                          FontSize="18" 
                          FontWeight="SemiBold" 
                          Foreground="#757575"
                          HorizontalAlignment="Center"
                          LetterSpacing="4"/>
            </StackPanel>
            
            <!-- Loading Indicator -->
            <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,40,0,0" Spacing="16">
                <TextBlock Text="Loading..." 
                          FontSize="14" 
                          Foreground="#9E9E9E"
                          HorizontalAlignment="Center"/>
                
                <ProgressBar IsIndeterminate="True" 
                            Width="400" 
                            Height="6"
                            Foreground="#4CAF50"
                            Background="#E0E0E0"
                            CornerRadius="3"/>
            </StackPanel>
            
            <!-- Version Info -->
            <StackPanel Grid.Row="3" HorizontalAlignment="Center" Margin="0,30,0,0">
                <TextBlock Text="Version 1.0.0" 
                          FontSize="11" 
                          Foreground="#BDBDBD"
                          HorizontalAlignment="Center"/>
                <TextBlock Text="© 2024 Pavaman Technologies" 
                          FontSize="10" 
                          Foreground="#BDBDBD"
                          HorizontalAlignment="Center"
                          Margin="0,4,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
